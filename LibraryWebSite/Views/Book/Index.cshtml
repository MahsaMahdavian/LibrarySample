            <a asp-action="Insert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New Book</a>
        </div>
    </div>

    <br />
    <br />


    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
