@model LibraryWebSite.ViewModel.HomeViewModel

@foreach (var category in Model.CategoryList.OrderBy(o => o.CategoryName))
{


    <div class="row container">
        <div class="col-12">
            <div class="row">
                <h5 class="text-primary"><b>@category.CategoryName</b></h5>

            </div>
        </div>
    </div>
}
    <div class="col-12">
        <div class="row my-3">

            @foreach (var book in Model.BookList)
            {
                <div class="col-lg-4 col-xl-3 col-md-6 pb-4">
                    <div class="card" style="border:2px solid #5c5c5c;border-radius:5px; background:url('/images/leaves.png')">
                        <div class="pl-3 pt-1 text-center">
                            <h3 class="card-title text-primary"><b>@book.Title</b></h3>
                        </div>
                        @if (book.Image != null)
                        {
                            <img src="~/Admin/Book/ViewImage/@book.BookID" height="250" />
                        }
                        else
                        {
                            <img src="~/images/Book.png" height="250" />
                        }


                        <a asp-area="Admin" asp-controller="Book" asp-action="Details" class="btn btn-primary" style="border-radius:2px;" asp-route-id="@book.BookID">Details</a>
                    </div>
                </div>
            }
        </div>
    </div>



